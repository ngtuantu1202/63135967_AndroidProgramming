<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#2196F3"
                android:endColor="#03A9F4"
                android:startColor="#00BCD4"
                android:type="linear"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#FF5722"
                android:endColor="#FF7043"
                android:startColor="#F4511E"
                android:type="linear"
                />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#2196F3"
                android:endColor="#03A9F4"
                android:startColor="#00BCD4"
                android:type="linear"
                />
        </shape>
    </item>
</selector>
